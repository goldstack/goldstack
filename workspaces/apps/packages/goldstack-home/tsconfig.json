{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src/**/*",
    "./src/**/*.json",
    "./next-env.d.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "preserve",
    "incremental": true,
    "module": "esnext",
    "noEmit": false,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../goldstack-api"
    },
    {
      "path": "../project-template-data"
    }
  ]
}
