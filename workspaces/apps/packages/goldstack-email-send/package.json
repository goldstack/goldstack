{
  "name": "@goldstack/goldstack-email-send",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/ses.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist/",
    "clean-terraform": "rimraf ./infra/aws/.terraform",
    "compile": "tsc -p tsconfig.json",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "infra": "template infra",
    "prepublishOnly": "yarn run build",
    "template": "template",
    "template-ts": "ts-node scripts/template.ts",
    "test": "GOLDSTACK_DEPLOYMENT=local GOLDSTACK_LOG_EMAILS=false jest --passWithNoTests --config=./jest.config.js --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.958.0",
    "@goldstack/template-email-send": "0.4.78",
    "@goldstack/utils-sh": "0.5.37"
  },
  "devDependencies": {
    "@goldstack/template-email-send-cli": "0.5.78",
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
