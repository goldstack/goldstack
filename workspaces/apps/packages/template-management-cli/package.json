{
  "name": "@goldstack/template-management-cli",
  "version": "0.1.0",
  "license": "",
  "author": "",
  "sideEffects": false,
  "main": "src/image.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build-docker": "ts-node ./src/build.ts build $@",
    "clean": "rimraf ./dist && yarn clean-docker",
    "clean-docker": "ts-node ./src/build.ts clean $@",
    "cli": "ts-node --swc ./src/cli.ts",
    "cli-deploy-set-dev": "yarn cli deploy-set --set s3 --repo goldstack-dev --deployment dev --emailResultsTo maxrohde.public@gmail.com --workDir tmp --skipTests true",
    "cli-schedule-all-deploy-sets-dev": "yarn cli schedule-all-deploy-sets --repo goldstack-dev --deployment dev",
    "compile": "tsc --build",
    "compile-watch": "tsc --build --watch",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "yarn build && yarn build-docker $@ && yarn template deploy $@",
    "deploy-ts": "yarn build && yarn build-docker $@ && yarn template-ts deploy $@",
    "infra": "yarn template infra",
    "template": "template-docker-image-aws",
    "template-ts": "ts-node scripts/template.ts",
    "test-ci": "jest --passWithNoTests --config=./jest.config.js --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.645.0",
    "@goldstack/goldstack-email-send": "0.1.0",
    "@goldstack/infra-aws": "0.4.27",
    "@goldstack/project-build": "0.1.0",
    "@goldstack/project-install": "0.1.0",
    "@goldstack/template-build-set": "0.1.0",
    "@goldstack/template-metadata": "0.1.0",
    "@goldstack/template-repository": "0.1.0",
    "@goldstack/template-repository-bucket": "0.1.0",
    "@goldstack/template-s3": "0.5.24",
    "@goldstack/template-static-website-aws": "0.5.39",
    "@goldstack/utils-cli": "0.3.13",
    "@goldstack/utils-config": "0.4.18",
    "@goldstack/utils-git": "0.2.10",
    "@goldstack/utils-log": "0.3.15",
    "@goldstack/utils-package": "0.4.18",
    "@goldstack/utils-project": "0.4.18",
    "mock-aws-s3-v3": "5.0.10",
    "source-map-support": "^0.5.21",
    "tmp": "^0.2.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@goldstack/template-docker-image-aws": "0.5.39",
    "@goldstack/utils-sh": "0.5.17",
    "@swc/core": "^1.9.3",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/source-map-support": "^0.5.4",
    "@types/wtfnode": "^0.7.0",
    "@types/yargs": "^17.0.10",
    "concurrently": "^7.3.0",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
