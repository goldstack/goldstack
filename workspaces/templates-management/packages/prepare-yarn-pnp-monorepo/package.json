{
  "name": "@goldstack/prepare-yarn-pnp-monorepo",
  "version": "0.1.1",
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/perpareYarnPnpMonorepo.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:watch": "yarn clean && yarn compile-watch",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "compile-watch:light": "nodemon --watch ./src/ -e '*' --exec 'yarn compile'",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "generate-schema": "ts-node scripts/generateSchemas.ts YarnPnpMonorepo",
    "prepublishOnly": "yarn run build",
    "test-ci": "jest --passWithNoTests --config=./jest.config.js --runInBand"
  },
  "dependencies": {
    "@goldstack/infra": "0.4.18",
    "@goldstack/infra-aws": "0.4.27",
    "@goldstack/prepare-template": "0.1.0",
    "@goldstack/utils-config": "0.4.18",
    "@goldstack/utils-package": "0.4.18",
    "@goldstack/utils-sh": "0.5.17",
    "@goldstack/utils-template": "0.4.18"
  },
  "devDependencies": {
    "@goldstack/utils-package-config-generate": "0.3.11",
    "@swc/core": "^1.9.3",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
