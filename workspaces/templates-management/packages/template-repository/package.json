{
  "name": "@goldstack/template-repository",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/templateRepository.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:watch": "yarn clean && yarn compile-watch",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "compile-watch:light": "nodemon --watch ./src/ -e '*' --exec 'yarn compile'",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "prepublishOnly": "yarn run build",
    "test": "jest --passWithNoTests --config=./jest.config.js --runInBand",
    "test-watch": "jest --config=./jest.config.js --watch"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.844.0",
    "@goldstack/utils-log": "0.3.18",
    "@goldstack/utils-package": "0.4.22",
    "@goldstack/utils-s3": "0.4.14",
    "@goldstack/utils-sh": "0.5.21",
    "@goldstack/utils-template": "0.4.22",
    "fs-extra": "^11.2.0",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@swc/core": "^1.10.1",
    "@swc/jest": "^0.2.37",
    "@types/archiver": "^6.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/semver": "^7.5.8",
    "jest": "^29.7.0",
    "rimraf": "^3.0.2",
    "typescript": "^5.7.2"
  }
}
