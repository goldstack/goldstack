{
  "name": "@goldstack/template-build-set",
  "version": "0.1.0",
  "description": "Builds deployment sets",
  "license": "",
  "author": "",
  "sideEffects": false,
  "main": "src/templateBuildSet.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:watch": "yarn clean && yarn compile-watch",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "compile-watch:light": "nodemon --watch ./src/ -e '*' --exec 'yarn compile'",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "generate-schema": "ts-json-schema-generator --tsconfig tsconfig.generate.json --no-type-check --path './src/types/**/*' --type 'DeploySetConfig' -o src/schemas/configSchema.json",
    "prepublishOnly": "yarn run build",
    "test": "jest --passWithNoTests --config=./jest.config.js --runInBand"
  },
  "dependencies": {
    "@goldstack/infra": "0.4.22",
    "@goldstack/infra-aws": "0.4.34",
    "@goldstack/project-build": "0.1.0",
    "@goldstack/project-config": "0.1.0",
    "@goldstack/project-install": "0.1.0",
    "@goldstack/template-build": "0.1.0",
    "@goldstack/template-repository": "0.1.0",
    "@goldstack/utils-cli": "0.3.16",
    "@goldstack/utils-config": "0.4.22",
    "@goldstack/utils-git": "0.2.12",
    "@goldstack/utils-log": "0.3.18",
    "@goldstack/utils-package": "0.4.22",
    "@goldstack/utils-project": "0.4.22",
    "@goldstack/utils-sh": "0.5.21",
    "@goldstack/utils-template": "0.4.22",
    "@goldstack/utils-template-test": "0.1.0",
    "mock-aws-s3-v3": "6.0.2"
  },
  "devDependencies": {
    "@swc/core": "^1.10.1",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "rimraf": "^3.0.2",
    "ts-json-schema-generator": "^1.0.0",
    "typescript": "^5.7.2"
  }
}
