{
  "name": "@goldstack/server-side-rendering",
  "version": "0.1.0",
  "description": "Template for server-side rendering",
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/module.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build-lambda": "yarn template build",
    "clean": "rimraf ./dist && rimraf ./distLambda",
    "clean-terraform": "rimraf ./infra/aws/.terraform",
    "compile": "tsc --build tsconfig.compile.json",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "yarn build-lambda \"$@\" && yarn template deploy \"$@\"",
    "infra": "yarn template infra \"$@\"",
    "start": "PORT=5054 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local ts-node scripts/start.ts",
    "template": "yarn template-ts",
    "template-ts": "ts-node --project tsconfig.local.json --swc src/template.ts",
    "test": "GOLDSTACK_DEPLOYMENT=local yarn test-server && yarn test-ui",
    "test-server": "TEST_SERVER_PORT=50331 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local jest --passWithNoTests --verbose --config=jest.config.js --runInBand",
    "test-ui": "GOLDSTACK_DEPLOYMENT=local jest --passWithNoTests --verbose --config=jest.config.ui.js --runInBand",
    "test-watch": "concurrently \"yarn test-server --watch\" \"yarn test-ui --watch\"",
    "watch": "PORT=5054 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local yarn node ./scripts/watchServer.js"
  },
  "dependencies": {
    "@goldstack/template-ssr": "0.3.62",
    "@goldstack/utils-esbuild": "0.5.12",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.15",
    "date-fns": "^2.28.0",
    "esbuild": "^0.24.2",
    "esbuild-ignore-with-comments-plugin": "0.3.16",
    "esbuild-ssr-css-modules-plugin": "0.1.15",
    "esbuild-tailwind-ssr-plugin": "0.1.6",
    "jest-transform-stub": "^2.0.0",
    "source-map-support": "^0.5.21",
    "static-file-mapper-build": "0.3.26",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@goldstack/template-ssr-cli": "0.3.68",
    "@goldstack/utils-aws-http-api-local": "0.3.51",
    "@jest-mock/express": "^1.4.5",
    "@jest/transform": "^29.3.1",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.10.1",
    "@swc/jest": "^0.2.37",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/aws-lambda": "^8.10.147",
    "@types/aws-serverless-express": "^3.3.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "18",
    "@types/testing-library__jest-dom": "5",
    "@types/testing-library__react": "^10.2.0",
    "chokidar": "^4.0.3",
    "concurrently": "^7.3.0",
    "find-free-port": "^2.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-css-require": "0.4.13",
    "node-fetch": "2.6.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "tree-kill": "^1.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-plugin-css-modules": "^5.1.0"
  }
}
