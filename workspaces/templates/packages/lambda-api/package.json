{
  "name": "@goldstack/lambda-api",
  "version": "1.0.0",
  "description": "API build from multiple Lambdas behind an API gateway",
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/module.ts",
  "scripts": {
    "build": "template build",
    "build-ts": "yarn template-ts build",
    "clean": "rm -rf ./dist && rm -rf distLambda",
    "compile": "tsc --build",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js",
    "deploy": "yarn build && template deploy \"$@\"",
    "deploy-ts": "yarn build-ts && yarn template-ts deploy",
    "infra": "template infra \"$@\"",
    "start": "PORT=5054 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local ts-node scripts/start.ts",
    "template": "template",
    "template-ts": "ts-node scripts/template.ts",
    "test": "yarn test-ci --watch",
    "test-ci": "TEST_SERVER_PORT=50321 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local jest --passWithNoTests --config=jest.config.js",
    "watch": "PORT=5054 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local ts-node-dev ./scripts/start.ts"
  },
  "dependencies": {
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@goldstack/template-lambda-api": "0.4.0",
    "@goldstack/utils-aws-http-api-local": "0.1.5",
    "@jest-mock/express": "^1.1.7",
    "@types/aws-lambda": "^8.10.88",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.0",
    "@types/node-fetch": "2",
    "@yarnpkg/esbuild-plugin-pnp": "^2.0.0-rc.1",
    "esbuild": "^0.14.5",
    "find-free-port": "^2.0.0",
    "jest": "^26.6.3",
    "node-fetch": "2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  }
}
