{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src/**/*",
    "./pages/**/*",
    "./src/**/*.json",
    "./schemas/**/*.json",
    "./scripts/**/*",
    "./goldstack.json",
    "./next-env.d.ts",
    "pages"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "esnext",
    "incremental": true,
    "noEmit": false,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../../templates-lib/packages/template-nextjs"
    },
    {
      "path": "../../../utils/packages/utils-sh"
    }
  ]
}
