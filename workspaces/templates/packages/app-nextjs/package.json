{
  "name": "@goldstack/app-nextjs",
  "version": "0.1.0",
  "private": true,
  "author": "",
  "sideEffects": false,
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:next": "NEXT_TELEMETRY_DISABLED=1 next build && next export -o webDist/",
    "clean": "rimraf ./dist ./webDist",
    "compile": "tsc --build",
    "compile-watch": "tsc --isolatedModules false -p tsconfig.compile.json --watch",
    "compileOld": "tsc --isolatedModules false -p tsconfig.compile.json",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "template-nextjs set-nextjs-env $@ && yarn build && yarn web:build && template deploy $@",
    "deploy-ts": "yarn template-ts set-nextjs-env $@ && yarn build && yarn web:build && yarn template-ts deploy $@",
    "infra": "template-nextjs infra",
    "next:tracking:disable": "next telemetry disable",
    "next:watch": "NEXT_TELEMETRY_DISABLED=1 next",
    "prepublishOnly": "yarn run build",
    "start:next": "NEXT_TELEMETRY_DISABLED=1 next start",
    "template": "template-nextjs",
    "template-ts": "ts-node --project tsconfig.local.json scripts/template.ts",
    "test": "jest --config=./jest.config.js --watch",
    "test-ci": "jest --passWithNoTests --config=./jest.config.js --runInBand",
    "watch": "yarn next:watch",
    "web:build": "yarn build:next",
    "web:watch": "yarn web:build $@ && concurrently \"reload --dir ./webDist --watch-dir ./webDist --port 8071 --browser\" "
  },
  "dependencies": {
    "extracted-loader": "^1.0.7",
    "file-loader": "^6.2.0",
    "ignore-loader": "^0.1.2",
    "img-loader": "^4.0.0",
    "next": "^12.1.0",
    "next-compose-plugins": "^2.2.1",
    "next-optimized-images": "^2.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "swr": "^0.4.0",
    "url-loader": "^4.1.1"
  },
  "devDependencies": {
    "@goldstack/template-nextjs": "0.3.111",
    "@goldstack/utils-sh": "0.4.32",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@types/react": "^16.9.49",
    "@types/testing-library__jest-dom": "^5.9.1",
    "@types/testing-library__react": "^10.0.1",
    "concurrently": "^5.2.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-transform-stub": "^2.0.0",
    "next-transpile-modules": "^8.0.0",
    "reload": "^3.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  }
}
