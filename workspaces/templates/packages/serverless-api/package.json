{
  "name": "@goldstack/serverless-api",
  "version": "1.0.0",
  "description": "API build from multiple Lambdas behind an API gateway",
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/module.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build-lambda": "yarn template build",
    "build-lambda-ts": "yarn template-ts build",
    "clean": "rimraf ./dist && rimraf ./distLambda",
    "clean-terraform": "rimraf ./infra/aws/.terraform",
    "compile": "tsc --build",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "yarn build-lambda \"$@\" && yarn template deploy \"$@\"",
    "deploy-ts": "yarn build-lambda-ts \"$@\" && yarn template-ts deploy \"$@\"",
    "infra": "yarn template infra \"$@\"",
    "start": "PORT=5054 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local ts-node scripts/start.ts",
    "template": "yarn template-ts",
    "template-ts": "ts-node --swc scripts/template.ts",
    "test": "TEST_SERVER_PORT=50321 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local jest --passWithNoTests --config=jest.config.js --runInBand",
    "test-watch": "yarn test --watch",
    "watch": "PORT=5054 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local ts-node-dev --respawn ./scripts/start.ts"
  },
  "dependencies": {
    "@goldstack/utils-esbuild": "0.5.22",
    "date-fns": "^2.28.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@goldstack/template-lambda-api-cli": "0.6.84",
    "@goldstack/utils-aws-http-api-local": "0.3.74",
    "@jest-mock/express": "^1.4.5",
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.39",
    "@types/aws-lambda": "^8.10.159",
    "@types/aws-serverless-express": "^3.3.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.15",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.6",
    "find-free-port": "^2.0.0",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
