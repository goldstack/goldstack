{
  "name": "@goldstack/dynamodb",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/table.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist/",
    "clean-terraform": "rimraf ./infra/aws/.terraform",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "yarn template deploy \"$@\"",
    "infra": "yarn template infra",
    "template": "yarn template-ts",
    "template-ts": "ts-node --swc src/template.ts",
    "test": "GOLDSTACK_DEPLOYMENT=local jest --passWithNoTests --config=./jest.config.js --runInBand",
    "test-watch": "STOP_SERVER=false GOLDSTACK_DEPLOYMENT=local jest --passWithNoTests --config=./jest.config.js --runInBand --watch",
    "watch": "DYNAMODB_ADMIN_PORT=8001 GOLDSTACK_DEPLOYMENT=local ts-node scripts/watch.ts"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.958.0",
    "@aws-sdk/lib-dynamodb": "^3.958.0",
    "@goldstack/template-dynamodb": "0.4.0",
    "@goldstack/utils-log": "0.3.33",
    "dynamodb-toolbox": "^2.7.2",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@goldstack/template-dynamodb-cli": "0.6.74",
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.39",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "aws-sdk": "2.1525.0",
    "dynamodb-admin": "^4.6.1",
    "ejs": "^3.1.8",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
