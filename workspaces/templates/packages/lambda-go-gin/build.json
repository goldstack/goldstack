{
  "include": [
    "infra/",
    "docs/",
    "src/",
    "schemas/",
    "scripts/",
    ".gitignore",
    "goldstack.json",
    "package.json",
    "README.md",
    "template.json",
    "tsconfig.json",
    "*.go",
    "go.mod",
    "go.sum"
  ],
  "exclude": ["infra/aws/.terraform/", "infra/aws/tfplan", "infra/aws/terraform.tfstate.d/"],
  "overwriteFiles": [
    {
      "file": "goldstack.json",
      "fields": [
        {
          "path": "$.deployments",
          "value": []
        }
      ]
    },
    {
      "file": "src/state/deployments.json",
      "fields": [
        {
          "path": "$",
          "value": []
        }
      ]
    },
    {
      "file": "tsconfig.json",
      "fields": [
        {
          "path": "$.references",
          "value": []
        }
      ]
    }
  ]
}
