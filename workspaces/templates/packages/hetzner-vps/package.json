{
  "name": "@goldstack/hetzner-vps",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/main.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile && ts-node --swc scripts/build.ts",
    "clean": "rimraf dist/",
    "clean-terraform": "rimraf ./infra/aws/.terraform",
    "compile": "tsc -p tsconfig.json",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "yarn template-ts deploy",
    "infra": "yarn template-ts infra",
    "prepublishOnly": "yarn run build",
    "template": "yarn template-ts",
    "template-ts": "ts-node --swc scripts/template.ts",
    "test": "GOLDSTACK_DEPLOYMENT=local jest --passWithNoTests --config=./jest.config.js --runInBand"
  },
  "dependencies": {
    "@goldstack/template-hetzner-vps": "0.1.53",
    "@goldstack/utils-sh": "0.5.36"
  },
  "devDependencies": {
    "@goldstack/template-hetzner-vps-cli": "0.1.60",
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
