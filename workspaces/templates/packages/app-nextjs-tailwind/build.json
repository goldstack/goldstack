{
  "include": [
    "infra/",
    "src/",
    "public/",
    "schemas/",
    "scripts/",
    "docs/",
    ".env",
    ".gitignore",
    "goldstack.json",
    "jest.config.js",
    "next.config.js",
    "next-env.d.ts",
    "package.json",
    "README.md",
    "template.json",
    "postcss.config.js",
    "tailwind.config.js",
    "tsconfig.json",
    "tsconfig.local.json",
    "tsconfig.test.json"
  ],
  "exclude": [
    "infra/aws/.terraform/",
    "infra/aws/tfplan",
    "infra/aws/terraform.tfstate.d/"
  ],
  "overwriteFiles": [
    {
      "file": "goldstack.json",
      "fields": [
        {
          "path": "$.deployments",
          "value": []
        }
      ]
    },
    {
      "file": "src/state/deployments.json",
      "fields": [
        {
          "path": "$",
          "value": []
        }
      ]
    },
    {
      "file": "tsconfig.json",
      "fields": [
        {
          "path": "$.references",
          "value": []
        }
      ]
    }
  ]
}
