{
  "name": "@goldstack/nextjs",
  "version": "0.1.0",
  "private": true,
  "author": "",
  "sideEffects": false,
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build-next": "NEXT_TELEMETRY_DISABLED=1 next build",
    "build-open-next": "open-next build",
    "clean": "rimraf ./dist ./webDist",
    "clean-terraform": "rimraf ./infra/aws/.terraform",
    "compile": "tsc --build",
    "compile-watch": "tsc --isolatedModules false -p tsconfig.compile.json --watch",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "yarn template-ts set-nextjs-env $@ && yarn build && yarn web:build && yarn template-ts deploy $@",
    "deploy-ts": "yarn template-ts set-nextjs-env $@ && yarn build && yarn web:build && yarn template-ts deploy $@",
    "infra": "yarn template infra",
    "next:tracking:disable": "next telemetry disable",
    "next:watch": "NEXT_TELEMETRY_DISABLED=1 next",
    "prepublishOnly": "yarn run build",
    "start:next": "NEXT_TELEMETRY_DISABLED=1 next start",
    "template": "yarn template-ts",
    "template-ts": "ts-node --project tsconfig.local.json --swc scripts/template.ts",
    "test": "jest --passWithNoTests --config=./jest.config.js --runInBand",
    "test-watch": "jest --config=./jest.config.js --watch",
    "watch": "yarn next:watch",
    "web:build": "yarn build:next",
    "web:watch": "yarn web:build $@ && concurrently \"reload --dir ./webDist --watch-dir ./webDist --port 8071 --browser\" "
  },
  "dependencies": {
    "@aws-sdk/client-sso-oidc": "^3.645.0",
    "@aws-sdk/client-sts": "^3.645.0",
    "autoprefixer": "^10.4.20",
    "next": "^14",
    "react": "^19",
    "react-dom": "^19",
    "react-is": "^18.2.0",
    "swr": "^0.4.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@goldstack/template-nextjs": "0.5.57",
    "@goldstack/utils-sh": "0.5.21",
    "@swc/core": "^1.10.1",
    "@swc/jest": "^0.2.37",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/minimist": "^1",
    "@types/node": "^22.10.2",
    "@types/node-abi": "^3",
    "@types/rc": "^1",
    "@types/react": "18",
    "@types/semver": "^7.5.8",
    "@types/simple-get": "^4",
    "@types/testing-library__jest-dom": "5",
    "@types/testing-library__react": "^10.2.0",
    "concurrently": "^7.3.0",
    "detect-libc": "^2.0.3",
    "expand-template": "^2.0.3",
    "file-loader": "^6.2.0",
    "github-from-package": "^0.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "minimist": "^1.2.8",
    "mkdirp-classic": "^0.5.3",
    "napi-build-utils": "^1.0.2",
    "node-abi": "^3.71.0",
    "open-next": "^3.1.3",
    "pump": "^3.0.2",
    "rc": "^1.2.8",
    "reload": "^3.2.0",
    "rimraf": "^3.0.2",
    "semver": "^7.6.3",
    "simple-get": "^4.0.1",
    "svg-url-loader": "^8.0.0",
    "tar-fs": "^3.0.6",
    "ts-node": "^10.9.2",
    "tunnel-agent": "^0.6.0",
    "typescript": "^5.7.2"
  }
}
