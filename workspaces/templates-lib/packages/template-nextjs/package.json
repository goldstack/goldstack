{
  "name": "@goldstack/template-nextjs",
  "version": "0.5.93",
  "description": "Building blocks for deploying Next.js applications to AWS using S3 and CloudFront",
  "keywords": [
    "goldstack",
    "utility",
    "infrastructure",
    "cloudfront",
    "next.js",
    "nextjs",
    "serverless",
    "aws",
    "s3",
    "terraform",
    "IaC",
    "configuration"
  ],
  "homepage": "https://goldstack.party/templates/nextjs",
  "bugs": {
    "url": "https://github.com/goldstack/goldstack/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goldstack/goldstack.git"
  },
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/templateNextjs.ts",
  "bin": {
    "template": "./bin/template",
    "template-nextjs": "./bin/template"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:watch": "yarn clean && yarn compile-watch",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "compile-watch:light": "nodemon --watch ./src/ -e '*' --exec 'yarn compile'",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "generate-schema": "ts-node scripts/generateSchemas.ts Nextjs && cp schemas/* ../../../templates/packages/app-nextjs/schemas && cp schemas/* ../../../templates/packages/app-nextjs-bootstrap/schemas && cp schemas/* ../../../templates/packages/app-nextjs-tailwind/schemas",
    "prepublishOnly": "yarn run build",
    "publish": "yarn npm publish --tolerate-republish",
    "test": "jest --passWithNoTests --config=./jest.config.js --runInBand",
    "patch-when-changed": "git diff --quiet HEAD^...HEAD -- . && git diff --quiet -- . && git diff --quiet --staged -- .  || yarn version patch"
  },
  "dependencies": {
    "@goldstack/infra": "0.4.39",
    "@goldstack/infra-aws": "0.4.57",
    "@goldstack/template-static-website-aws": "0.5.80",
    "@goldstack/utils-aws-cli": "0.4.58",
    "@goldstack/utils-aws-lambda": "0.3.70",
    "@goldstack/utils-cli": "0.3.31",
    "@goldstack/utils-config": "0.4.39",
    "@goldstack/utils-log": "0.3.33",
    "@goldstack/utils-package": "0.4.41",
    "@goldstack/utils-package-config": "0.4.41",
    "@goldstack/utils-sh": "0.5.38",
    "@goldstack/utils-template": "0.4.40",
    "@goldstack/utils-terraform": "0.4.71",
    "esbuild": "^0.25.6",
    "glob": "11.1.0",
    "source-map-support": "^0.5.21",
    "yargs": "^17"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.957.0",
    "@goldstack/utils-package-config-generate": "0.3.28",
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.39",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/yargs": "^17.0.33",
    "archiver": "^5.3.1",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "main": "dist/src/templateNextjs.js"
  }
}
