{
  "name": "@goldstack/utils-package",
  "version": "0.4.17",
  "description": "Utilities to work with Goldstack package configurations.",
  "keywords": [
    "goldstack",
    "utility",
    "infrastructure",
    "IaC",
    "configuration"
  ],
  "homepage": "https://goldstack.party",
  "bugs": {
    "url": "https://github.com/goldstack/goldstack/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goldstack/goldstack.git"
  },
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/utilsPackage.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:watch": "yarn clean && yarn compile-watch",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "compile-watch:light": "nodemon --watch ./src/ -e '*' --exec 'yarn compile'",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "generate-schema": "ts-json-schema-generator --tsconfig tsconfig.generate.json --no-type-check --path './src/types/**/*' --type 'Package' -o src/schemas/configSchema.json",
    "prepublishOnly": "yarn run build",
    "publish": "utils-git changed --exec \"yarn npm publish $@\"",
    "test-ci": "jest --passWithNoTests --config=./jest.config.js --runInBand",
    "version:apply": "utils-git changed --exec \"yarn version $@ && yarn version apply\"",
    "version:apply:force": "yarn version $@ && yarn version apply"
  },
  "dependencies": {
    "@goldstack/infra": "0.4.17",
    "@goldstack/utils-config": "0.4.17",
    "@goldstack/utils-sh": "0.5.16",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@goldstack/utils-git": "0.2.9",
    "@swc/core": "^1.9.3",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/yargs": "^17.0.10",
    "jest": "^29.3.1",
    "renamer": "^0.7.0",
    "rimraf": "^3.0.2",
    "ts-json-schema-generator": "^1.0.0",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "main": "dist/src/utilsPackage.js"
  }
}
