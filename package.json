{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "repository": "git@github.com:goldstack/goldstack.git",
  "license": "MIT",
  "author": "Max Rohde <maxrohde.public@gmail.com>",
  "sideEffects": false,
  "main": "index.js",
  "workspaces": [
    "workspaces/*"
  ],
  "scripts": {
    "build": "yarn compile",
    "commit": "yarn git:commit \"$0\"",
    "compile": "tsc -b",
    "compile-watch": "tsc -b -w",
    "ensure-local-packages": "utils-package-upgrade",
    "eslint": "eslint",
    "fix-project-references": "utils-typescript-references",
    "format": "prettier --loglevel log --config .prettierrc.json --write .",
    "format-check": "prettier --loglevel log --config .prettierrc.json --check .",
    "generate-docs": "yarn workspace templates-lib generate-docs && yarn workspace docs generate-docs && yarn workspace apps generate-docs",
    "generate-docs:markdown": "utils-docs-cli generate-markdown-doc workspaces/docs/docs/modules/yarn-pnp-monorepo/index.md workspaces/templates/README.md",
    "generate-schema": "yarn workspace templates-lib generate-schema && yarn workspace templates-management generate-schema && yarn workspace apps generate-schema",
    "git:set-user": "git config user.email \"$@\" && git submodule foreach --recursive git config user.email \"$@\"",
    "lint": "eslint . --ext .js,.ts,.tsx,.json,.yml,.yaml,.html",
    "lint-fix": "eslint . --ext .js,.ts,.tsx,.json,.yml,.yaml,.html --fix",
    "prettier": "prettier",
    "test-ci": "yarn workspaces foreach run test-ci",
    "test-watch": "nodemonx --watch . --exec 'yarn test-ci'"
  },
  "dependencies": {
    "@ampproject/toolbox-optimizer": "^2.5.14"
  },
  "devDependencies": {
    "@goldstack/nodemonx": "0.3.19",
    "@goldstack/utils-docs-cli": "0.3.11",
    "@goldstack/utils-package-upgrade": "0.2.20",
    "@goldstack/utils-typescript-references": "0.1.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "@yarnpkg/doctor": "^3.0.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-yaml": "^0.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.2.1",
    "typescript": "^4.4.3"
  },
  "packageManager": "yarn@3.0.2"
}
