{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "repository": "git@github.com:goldstack/goldstack.git",
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "index.js",
  "workspaces": [
    "workspaces/*"
  ],
  "scripts": {
    "build": "yarn compile",
    "commit": "yarn git:commit \"$0\"",
    "compile": "yarn fix-project-references && tsc --build",
    "compile-watch": "tsc -b -w",
    "ensure-no-package-mismatches": "syncpack list-mismatches --config .syncpackrc.json",
    "eslint": "eslint",
    "fix-package-mismatches": "syncpack fix-mismatches --config .syncpackrc.json",
    "fix-project-references": "ts-node scripts/fixProjectReferences.ts",
    "format": "prettier --loglevel log --config .prettierrc.json --write .",
    "format-check": "prettier --loglevel log --config .prettierrc.json --check .",
    "generate-docs": "yarn workspace templates-lib generate-docs && yarn workspace docs generate-docs && yarn workspace apps generate-docs",
    "generate-schema": "yarn workspace templates-lib generate-schema && yarn workspace templates-management generate-schema && yarn workspace apps generate-schema",
    "git:set-user": "git config user.email \"$@\" && git submodule foreach --recursive git config user.email \"$@\"",
    "lint": "eslint . --ext .js,.ts,.tsx,.json,.yml,.yaml,.html",
    "lint-fix": "eslint . --ext .js,.ts,.tsx,.json,.yml,.yaml,.html --fix",
    "prettier": "prettier",
    "test-ci": "yarn workspaces foreach run test-ci",
    "test-watch": "nodemonx --watch . --exec 'yarn test-ci'"
  },
  "resolutions": {
    "aws-sdk": "^2.1222.0",
    "glob-parent": "5.1.2",
    "json-schema": "0.4.0",
    "prismjs": "1.27.0",
    "trim": "0.0.3"
  },
  "devDependencies": {
    "@goldstack/nodemonx": "0.4.4",
    "@goldstack/utils-docs-cli": "0.3.11",
    "@goldstack/utils-typescript-references": "0.3.3",
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "concurrently": "^7.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-yaml": "^0.5.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.2.1",
    "syncpack": "^8.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.3"
}
